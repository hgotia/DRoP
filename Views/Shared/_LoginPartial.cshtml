@using Microsoft.AspNetCore.Identity
@using Drop.Web.Areas.Identity.Data

@inject SignInManager<DropWebUser> SignInManager
@inject UserManager<DropWebUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Home" asp-action="Index">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Admin Page</button>
            </form>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        @*<li class="nav-item">
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>*@
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Admin Login</a>
        </li>
    }
</ul>
