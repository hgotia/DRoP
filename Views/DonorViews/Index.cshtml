@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Drop.Web</title>
</head>
<body>
    <p>Donor view</p>
    <div class="jumbotron text-center" style="background-color:white">
        <h1 class="display-1"><strong>DRoP</strong></h1>
        <p>The quick brown fox jumps over the lazy dog.</p>
    </div>
    <div style="text-align:center">
        <input style="height:60px;width:250px;border-radius:18px;font-size:18px;background-color:white" type="button" value="Schedule an Appointment" onclick="location.href='@Url.Action("ScheduleAppointment", "DonorViews")'" />
        <input style="height:60px;width:250px;border-radius:18px;font-size:18px;background-color:white" type="button" value="Check for Eligibility" onclick="location.href='@Url.Action("Questions", "DonorViews")'" />
